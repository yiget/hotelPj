<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.itrip.mapper.UserMapper" >

  <resultMap id="BaseResultMap" type="org.itrip.pojo.User" >
    <id column="id" property="id" jdbcType="INTEGER" />
    <result column="username" property="username" jdbcType="VARCHAR" />
    <result column="password" property="password" jdbcType="VARCHAR" />
  </resultMap>
  
  <!-- 数据库字段 -->
  <sql id="Base_Column_List" >
    id, username, password
  </sql>
  
  <select id="getLogin" resultMap="BaseResultMap" parameterType="org.itrip.pojo.User" >
    select 
    	<include refid="Base_Column_List" />
    from user where username = #{username} 
    <if test="password!=null">
    	and password=#{password}
    </if>
    
  </select>
 
 <select id="getRegister" parameterType="org.itrip.pojo.User" resultType="org.itrip.pojo.User">
 	select *from user where username=#{username}
 </select>
 	
  <insert id="getQueryUserName" parameterType="org.itrip.pojo.User">
        insert into user(id,username,password) values(null,#{username},#{password})
</insert>
 
</mapper>